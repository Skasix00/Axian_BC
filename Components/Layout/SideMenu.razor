<section>
    <div class="p-4">
        <div class="side-content pt-4 pb-4 px-4">
            <ul class="list">
                @foreach (var item in listitems)
                {
                    if (item.Id == 10)
                    {
                        <li class="list-item selected" accesskey="@item.Id">
                            <p class="list-text">@item.Text @item.Number</p>
                            <img class="list-icon" src="Images/@item.Image" alt=" list_icon" />
                        </li>
                    }
                    else
                    {
                        <li class="list-item" accesskey="@item.Id">
                            <p class="list-text">@item.Text @item.Number</p>
                            <img class="list-icon" src="Images/@item.Image" alt=" list_icon" />
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</section>

